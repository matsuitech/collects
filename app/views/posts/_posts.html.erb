<% if posts.any? %>
    <div class="row">
        <% posts.each do |post| %>
            <div class="col-6 col-md-3 col-lg-2">
                <div class="image-wrapper">
                    <%= link_to (image_tag post.post_image.to_s), post_path(post) %>
                </div>
                <div class="top_user">
                    <div class="col-3 col-md-3">
                        <div class="icon">
                            <%= link_to (image_tag "#{post.user.image.to_s}"), user_path(post.user) %>
                        </div>
                    </div>
                    <div class="posts_user_name">
                        <h5><%= link_to post.user.name, user_path(post.user), class: 'text-decoration-none' %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="pagy">
        <%== pagy_bootstrap_nav(@pagy) %>
    </div>
<% end %>