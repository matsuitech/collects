<% if posts.any? %>
    <div class="row">
        <% posts.first(15).each do |post| %>
            <div class="col-6 col-md-3 col-lg-2">
                <div class="image-wrapper">
                    <%if post.user == current_user %>
                        <%= link_to (image_tag post.post_image.to_s), post_path(post)%>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
<% end %>