<h1>My Showcase</h1>
<div class="row">
    <% @posts.each do |post| %>
        <div class="col-6 col-md-3 col-lg-2 posts_myshowcase">
            <div class="image-wrapper">
                <%= link_to (image_tag post.post_image.to_s), post_path(post), class: "text-decoration-none" %>
            </div>
            <%= post.comment %>
        </div>
    <% end %>
</div>
<div class="pagy">
    <%== pagy_bootstrap_nav(@pagy) %>
</div>